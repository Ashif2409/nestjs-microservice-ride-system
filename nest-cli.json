{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ride-system/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ride-system/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ride-system",
  "projects": {
    "logging": {
      "type": "application",
      "root": "apps/logging",
      "entryFile": "main",
      "sourceRoot": "apps/logging/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logging/tsconfig.app.json"
      }
    },
    "ride-system": {
      "type": "application",
      "root": "apps/ride-system",
      "entryFile": "main",
      "sourceRoot": "apps/ride-system/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ride-system/tsconfig.app.json"
      }
    },
    "rider": {
      "type": "application",
      "root": "apps/rider",
      "entryFile": "main",
      "sourceRoot": "apps/rider/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rider/tsconfig.app.json"
      }
    }
  }
}